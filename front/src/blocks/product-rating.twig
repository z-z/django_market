<div class="product__rating">
	<div class="product__rating_empty">
		Нет отзывов
	</div>
	<div class="product__rating-score">
		<div class="product__rating-stars-wr">
			<div class="product__rating-stars">
				{% for item in 0..4 %}
					<div class="product__rating-star">
						<svg role="img" class="ic-star">
							<use xlink:href="#ic-star"></use>
						</svg>
					</div>
				{% endfor %}
			</div>
			<div class="product__rating-stars_fill-wr">
				<div class="product__rating-stars product__rating-stars_fill">
					{% for item in 0..4 %}
						<div class="product__rating-star product__rating-star_fill">
							<svg role="img" class="ic-star-fill">
								<use xlink:href="#ic-star-fill"></use>
							</svg>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<span class="product__raiting-count">7</span>
	</div>
</div>
